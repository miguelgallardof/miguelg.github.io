---
// se ejecuta en el servidor o en build time <----
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 3rem;
  }

  h2 {
    margin-bottom: 0.5rem;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 2.25rem;
    }
  }
</style>
