---
import Section from "@/components/Section.astro";

import { projects } from "@cv";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ name, url, description, highlights, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a
                    href={url}
                    title={`Ingresar a ${name}`}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {name}
                  </a>
                  {isActive && <span class="no-print">&bull;</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    flex-direction: column;
    gap: 1rem;
    margin-inline: -1rem;
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid #f2f2f2;
    border-radius: 0.5rem;
    color: #000;
    height: 100%;
  }

  header {
    flex: 1;
  }

  a {
    color: #111;
  }

  a:hover {
    text-decoration: underline;
  }

  p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 0.25rem;
  }

  article h3 span {
    color: rgb(0, 188, 47);
    animation: pulse 1s linear infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  footer span {
    border-radius: 0.5rem;
    background-color: #eeee;
    color: #000;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.25rem 0.6rem;
  }

  @keyframes pulse {
    0% {
      scale: 1;
      opacity: 0;
    }
    50% {
      scale: 1.2;
      opacity: 1;
    }
    100% {
      scale: 1;
      opacity: 0;
    }
  }
</style>
